<body class="font-sans bg-green-50">
  <div class="flex min-h-screen">

    <!-- Sidebar -->
    <aside id="sidebar" class="w-72 bg-white p-8 shadow-xl border-r border-green-100 hidden md:block rounded-tr-3xl">
      <h2 class="text-2xl font-extrabold text-green-800 mb-8">Filters</h2>
      <div>
        <h3 class="font-semibold text-green-700 mb-2">Select Category</h3>
        <div class="space-y-2">
          <label class="flex items-center gap-3 cursor-pointer px-2 py-1 rounded-lg hover:bg-green-50 transition">
            <input type="radio" name="category" value="silk" class="accent-green-600 focus:ring-2 focus:ring-green-400" />
            <span class="text-gray-700">Silk</span>
          </label>
          <label class="flex items-center gap-3 cursor-pointer px-2 py-1 rounded-lg hover:bg-green-50 transition">
            <input type="radio" name="category" value="fabric" class="accent-green-600 focus:ring-2 focus:ring-green-400" />
            <span class="text-gray-700">Fabric</span>
          </label>
          <label class="flex items-center gap-3 cursor-pointer px-2 py-1 rounded-lg hover:bg-green-50 transition">
            <input type="radio" name="category" value="cotton" class="accent-green-600 focus:ring-2 focus:ring-green-400" />
            <span class="text-gray-700">Cotton</span>
          </label>
          <label class="flex items-center gap-3 cursor-pointer px-2 py-1 rounded-lg hover:bg-green-50 transition">
            <input type="radio" name="category" value="wool" class="accent-green-600 focus:ring-2 focus:ring-green-400" />
            <span class="text-gray-700">Wool</span>
          </label>
          <label class="flex items-center gap-3 cursor-pointer px-2 py-1 rounded-lg hover:bg-green-50 transition">
            <input type="radio" name="category" value="linen" class="accent-green-600 focus:ring-2 focus:ring-green-400" />
            <span class="text-gray-700">Linen</span>
          </label>
          <label class="flex items-center gap-3 cursor-pointer px-2 py-1 rounded-lg hover:bg-green-50 transition">
            <input type="radio" name="category" value="cashmere" class="accent-green-600 focus:ring-2 focus:ring-green-400" />
            <span class="text-gray-700">Cashmere</span>
          </label>
        </div>
      </div>
      <div class="mt-8">
        <h3 class="font-semibold text-green-700 mb-2">Price Range</h3>
        <div class="space-y-2">
          <label class="flex items-center gap-3 cursor-pointer px-2 py-1 rounded-lg hover:bg-green-50 transition">
            <input type="radio" name="price" value="0-" checked class="accent-green-600 focus:ring-2 focus:ring-green-400" />
            <span class="text-gray-700">All</span>
          </label>
          <label class="flex items-center gap-3 cursor-pointer px-2 py-1 rounded-lg hover:bg-green-50 transition">
            <input type="radio" name="price" value="200-1000" class="accent-green-600 focus:ring-2 focus:ring-green-400" />
            <span class="text-gray-700">Rs.200 above</span>
          </label>
          <label class="flex items-center gap-3 cursor-pointer px-2 py-1 rounded-lg hover:bg-green-50 transition">
            <input type="radio" name="price" value="1000-" class="accent-green-600 focus:ring-2 focus:ring-green-400" />
            <span class="text-gray-700">Rs.1000 above</span>
          </label>
        </div>
      </div>
      <div class="mt-8">
        <h3 class="font-semibold text-green-700 mb-2">Color</h3>
        <div class="flex flex-wrap gap-3">
          <label class="flex items-center gap-2 cursor-pointer px-2 py-1 rounded-lg hover:bg-green-50 transition">
            <input type="checkbox" name="color" value="white" class="accent-green-600 focus:ring-2 focus:ring-green-400" />
            <span class="inline-block w-4 h-4 rounded-full bg-gray-200 border"></span>
            <span class="text-gray-700">White</span>
          </label>
          <label class="flex items-center gap-2 cursor-pointer px-2 py-1 rounded-lg hover:bg-green-50 transition">
            <input type="checkbox" name="color" value="black" class="accent-green-600 focus:ring-2 focus:ring-green-400" />
            <span class="inline-block w-4 h-4 rounded-full bg-gray-900 border"></span>
            <span class="text-gray-700">Black</span>
          </label>
          <label class="flex items-center gap-2 cursor-pointer px-2 py-1 rounded-lg hover:bg-green-50 transition">
            <input type="checkbox" name="color" value="green" class="accent-green-600 focus:ring-2 focus:ring-green-400" />
            <span class="inline-block w-4 h-4 rounded-full bg-green-500 border"></span>
            <span class="text-gray-700">Green</span>
          </label>
          <label class="flex items-center gap-2 cursor-pointer px-2 py-1 rounded-lg hover:bg-green-50 transition">
            <input type="checkbox" name="color" value="blue" class="accent-green-600 focus:ring-2 focus:ring-green-400" />
            <span class="inline-block w-4 h-4 rounded-full bg-blue-500 border"></span>
            <span class="text-gray-700">Blue</span>
          </label>
        </div>
      </div>
      <div class="mt-8">
        <h3 class="font-semibold text-green-700 mb-2">Size</h3>
        <div class="flex flex-wrap gap-3">
          <label class="flex items-center gap-2 cursor-pointer px-2 py-1 rounded-lg hover:bg-green-50 transition">
            <input type="checkbox" name="size" value="S" class="accent-green-600 focus:ring-2 focus:ring-green-400" />
            <span class="text-gray-700">S</span>
          </label>
          <label class="flex items-center gap-2 cursor-pointer px-2 py-1 rounded-lg hover:bg-green-50 transition">
            <input type="checkbox" name="size" value="M" class="accent-green-600 focus:ring-2 focus:ring-green-400" />
            <span class="text-gray-700">M</span>
          </label>
          <label class="flex items-center gap-2 cursor-pointer px-2 py-1 rounded-lg hover:bg-green-50 transition">
            <input type="checkbox" name="size" value="L" class="accent-green-600 focus:ring-2 focus:ring-green-400" />
            <span class="text-gray-700">L</span>
          </label>
          <label class="flex items-center gap-2 cursor-pointer px-2 py-1 rounded-lg hover:bg-green-50 transition">
            <input type="checkbox" name="size" value="XL" class="accent-green-600 focus:ring-2 focus:ring-green-400" />
            <span class="text-gray-700">XL</span>
          </label>
        </div>
      </div>
      <div class="mt-8">
        <h3 class="font-semibold text-green-700 mb-2">Brand</h3>
        <div class="space-y-2">
          <label class="flex items-center gap-3 cursor-pointer px-2 py-1 rounded-lg hover:bg-green-50 transition">
            <input type="checkbox" name="brand" value="swiftmart" class="accent-green-600 focus:ring-2 focus:ring-green-400" />
            <span class="text-gray-700">SwiftMart</span>
          </label>
          <label class="flex items-center gap-3 cursor-pointer px-2 py-1 rounded-lg hover:bg-green-50 transition">
            <input type="checkbox" name="brand" value="ecofab" class="accent-green-600 focus:ring-2 focus:ring-green-400" />
            <span class="text-gray-700">EcoFab</span>
          </label>
          <label class="flex items-center gap-3 cursor-pointer px-2 py-1 rounded-lg hover:bg-green-50 transition">
            <input type="checkbox" name="brand" value="cottonworld" class="accent-green-600 focus:ring-2 focus:ring-green-400" />
            <span class="text-gray-700">CottonWorld</span>
          </label>
        </div>
      </div>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 p-6">
      <button id="toggleSidebar" class="bg-green-600 text-white px-4 py-2 rounded-md mb-6 md:hidden shadow">
        <i class="fas fa-filter mr-2"></i> Filters
      </button>

      <!-- Page Heading -->
      <div class="mb-8">
        <h1 class="text-3xl font-extrabold text-green-800">Stores</h1>
        <p class="text-green-600 mt-1 text-lg">We have <span class="font-semibold text-green-700">9 vendors</span> now</p>
      </div>

      <!-- Product Grid -->
      <div id="productGrid" class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-10">
        <!-- Products will be inserted here -->
      </div>
    </main>
  </div>

  <!-- Font Awesome for icons (optional, for filter icon) -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

  <script>
    document.getElementById('toggleSidebar').addEventListener('click', () => {
      document.getElementById('sidebar').classList.toggle('hidden');
    });

    let cart = [];

    async function fetchAndRenderProducts(filter = {}) {
      try {
        let url = new URL("http://localhost:8000/api/v1/user/sell");

        Object.keys(filter).forEach(key => {
          if (filter[key]) {
            url.searchParams.append(key, filter[key]);
          }
        });
        const response = await fetch(url, {
          method: "POST",
          credentials: 'include'
        });
        const data = await response.json();
        const products = data.products || [];

        const grid = document.getElementById("productGrid");
        grid.innerHTML = "";

        products.forEach(product => {
          grid.innerHTML += `
            <div class="bg-white border border-green-100 rounded-3xl shadow-xl hover:shadow-2xl hover:-translate-y-1 transition-all duration-300 p-7 flex flex-col items-center group">
              <div class="bg-green-50 rounded-2xl shadow mb-4 p-2">
                <img src="${product.image}" alt="${product.title}" class="w-36 h-36 object-cover rounded-xl transition-transform group-hover:scale-105" />
              </div>
              <h3 class="text-lg font-bold text-green-900 mb-1 text-center">${product.title}</h3>
              <p class="text-green-700 font-bold text-xl mb-2">Rs.${product.price}</p>
              <a href="/api/v1/product/${product._id}" class="mt-auto bg-gradient-to-r from-green-500 to-green-600 text-white px-8 py-2 rounded-full hover:from-green-600 hover:to-green-700 font-semibold shadow transition-all duration-200">
                View
              </a>
            </div>
          `;
        });
      } catch (error) {
        console.error("Error fetching products:", error);
      }
    }

    // Collect all filter values (category, price, color, size, brand)
    function getFilters() {
      const filter = {};
      const category = document.querySelector("input[name='category']:checked");
      if (category) filter.category = category.value;

      const price = document.querySelector("input[name='price']:checked");
      if (price) filter.min = price.value.split('-')[0] || 0;

      // Colors
      const colors = Array.from(document.querySelectorAll("input[name='color']:checked")).map(cb => cb.value);
      if (colors.length) filter.colors = colors.join(',');

      // Sizes
      const sizes = Array.from(document.querySelectorAll("input[name='size']:checked")).map(cb => cb.value);
      if (sizes.length) filter.sizes = sizes.join(',');

      // Brands
      const brands = Array.from(document.querySelectorAll("input[name='brand']:checked")).map(cb => cb.value);
      if (brands.length) filter.brands = brands.join(',');

      return filter;
    }

    // Add event listeners for all filters
    document.querySelectorAll("input[name='category'], input[name='price'], input[name='color'], input[name='size'], input[name='brand']").forEach(input => {
      input.addEventListener("change", () => {
        fetchAndRenderProducts(getFilters());
      });
    });

    // Fetch products on page load
    fetchAndRenderProducts();
  </script>
</body>
