<body class="bg-white min-h-screen mb-12">
  <!-- Header Section -->
  <header class="container mx-auto my-5 px-4 ">
    <h1 class="text-4xl font-bold">Stores</h1>
    <p class="text-gray-500 text-lg">We have 9 vendors now</p>
  </header>

  <!-- Store Cards Section -->
  <div class="container mx-auto px-4">
    <div id="store-container" class="grid grid-cols-1 sm:grid-cols-2  lg:grid-cols-3 gap-6">
      <!-- Cards will be inserted dynamically -->
    </div>
  </div>

  <script>
    const stores = [
      { icon: "💻", name: "Tech Haven", categories: "Electronics - Laptops - Accessories", deliveryTime: "Delivery by 8:00 PM", pickup: "Pickup available", distance: "3.5 mi away", tag: "Exclusive online deals" },
      { icon: "📱", name: "Gadget Galaxy", categories: "Electronics - Mobile Phones - Smartwatches", deliveryTime: "Delivery by 7:30 PM", pickup: "Pickup available", distance: "4.2 mi away", tag: "Latest arrivals" },
      { icon: "🖥️", name: "Digital World", categories: "Electronics - Monitors - PC Components", deliveryTime: "Delivery by 6:00 PM", pickup: "Pickup available", distance: "6.8 mi away", tag: "Discounts available" },
      { icon: "🎧", name: "Audio Hub", categories: "Electronics - Headphones - Speakers", deliveryTime: "Delivery by 9:00 PM", pickup: "Pickup available", distance: "2.3 mi away", tag: "Best sound quality" },
      { icon: "👕", name: "Fashion Forward", categories: "Clothing - Men's Wear - Accessories", deliveryTime: "Delivery by 10:00 PM", pickup: "Pickup available", distance: "5.5 mi away", tag: "Trendy collection" },
      { icon: "👗", name: "Glamour Closet", categories: "Clothing - Women's Wear - Footwear", deliveryTime: "Delivery by 8:30 PM", pickup: "Pickup available", distance: "4.0 mi away", tag: "New arrivals" },
      { icon: "👟", name: "Sneaker Spot", categories: "Clothing - Sneakers - Sportswear", deliveryTime: "Delivery by 7:45 PM", pickup: "Pickup available", distance: "3.1 mi away", tag: "Limited edition releases" },
      { icon: "👜", name: "Luxury Trends", categories: "Clothing - Designer Bags - Accessories", deliveryTime: "Delivery by 9:15 PM", pickup: "Pickup available", distance: "6.2 mi away", tag: "Premium brands" },
      { icon: "⌚", name: "Timeless Watches", categories: "Electronics - Smartwatches - Classic Watches", deliveryTime: "Delivery by 8:45 PM", pickup: "Pickup available", distance: "4.7 mi away", tag: "Exclusive collections" }
    ];

    const storeContainer = document.getElementById("store-container");

    stores.forEach(store => {
      const storeCard = document.createElement("div");
      storeCard.className = "p-5 bg-white rounded-xl shadow-lg transition-transform transform hover:scale-105";
      storeCard.innerHTML = `
        <div class="text-5xl">${store.icon}</div>
        <h2 class="font-bold text-xl mt-2">${store.name}</h2>
        <p class="text-gray-500">${store.categories}</p>
        <p class="text-green-600 font-medium">${store.deliveryTime}</p>
        <p class="text-gray-500">${store.pickup}</p>
        <div class="mt-3 flex items-center space-x-2">
          <span class="badge bg-primary">${store.distance}</span>
            <span class="badge bg-warning">${store.tag}</span>
        </div>
      `;
      storeContainer.appendChild(storeCard);
    });
  </script>
</body>
