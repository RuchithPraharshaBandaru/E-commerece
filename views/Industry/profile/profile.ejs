<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title || 'Industry Profile' %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            primary: '#008b5e',
            secondary: '#e6f9f0',
            accent: '#005e3f',
            dark: '#ffffff',
            darkgray: '#f5f5f5'
          }
        }
      }
    }
  </script>
</head>
<body class="bg-gradient-to-r from-green-100 to-teal-100 text-gray-700 min-h-screen">
  <div class="container mx-auto px-4 py-8 max-w-4xl">
    
    <!-- Header -->
    <div class="border-b border-gray-200 pb-4 mb-6">
      <h1 class="text-4xl font-semibold text-primary">Profile Info</h1>
      <p class="text-gray-500 mt-2">Manage your company information</p>
    </div>
    
    <!-- Profile Content -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
      <div class="space-y-0">
        <!-- Company Name -->
        <div class="grid grid-cols-1 md:grid-cols-3 border-b border-gray-200 py-4">
          <div class="text-gray-700 font-medium">Company Name</div>
          <div class="md:col-span-2 px-3 py-2">
            <%= industryName || 'Not Provided' %>
          </div>
        </div>

        <!-- Email -->
        <div class="grid grid-cols-1 md:grid-cols-3 border-b border-gray-200 py-4">
          <div class="text-gray-700 font-medium">E-mail</div>
          <div class="md:col-span-2 px-3 py-2">
            <%= email || 'Not Provided' %>
          </div>
        </div>

        <!-- Address -->
        <div class="grid grid-cols-1 md:grid-cols-3 border-b border-gray-200 py-4">
          <div class="text-gray-700 font-medium">Address</div>
          <div class="md:col-span-2 px-3 py-2">
            <%= address || 'Not Provided' %>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Buttons -->
    <div class="flex justify-center md:justify-end gap-4 mt-8">
      <a href="/industry/logout" class="bg-gray-200 hover:bg-gray-300 text-gray-700 font-medium py-2 px-8 rounded border border-gray-300 transition duration-300">
        SIGN OUT
      </a>
      <a href="/industry/profile/edit" class="bg-primary hover:bg-accent text-white font-medium py-2 px-8 rounded transition duration-300">
        EDIT PROFILE
      </a>
    </div>
  </div>
</body>
</html>
